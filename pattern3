//sierpinski triangle 

public class SierpinskiTriangle {
    public static void main(String[] args) {
   int rows = 16;
  for (int i = 0; i < rows; i++) {
  for (int space = rows - i; space > 0; space--) {
                System.out.print(" ");
            }
 for (int j = 0; j <= i; j++) {
    if ((i & j) == 0)
        System.out.print("* ");
    else
         System.out.print("  ");
            }
         System.out.println();
        }
    }
}
